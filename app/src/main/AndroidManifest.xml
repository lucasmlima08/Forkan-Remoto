            </intent-filter>
        </activity>
        <activity
            android:name=".Categorias"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Jogo"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Acertou"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Errou"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
